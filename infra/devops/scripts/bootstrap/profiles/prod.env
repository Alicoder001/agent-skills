# Production profile

ENABLE_FAIL2BAN=1
ENABLE_FIREWALL=1
ENABLE_DOCKER=1
ENABLE_NGINX=1
ENABLE_NODE_PM2=1
ENABLE_POSTGRES=1
ENABLE_OBSERVABILITY=1
ENABLE_NODE_EXPORTER=1

APP_USER=appsvc
APP_SHELL=/bin/bash
APP_HOME=/srv/appsvc
APP_USER_PUBKEY_FILE=

SSH_PORT=22
UFW_ALLOW_SSH_CIDR=
ALLOW_HTTP=1
ALLOW_HTTPS=1

NGINX_SERVER_NAME=example.com
APP_UPSTREAM=127.0.0.1:3000
NGINX_ENABLE_TLS=0
NGINX_TLS_CERT_PATH=/etc/nginx/certs/fullchain.pem
NGINX_TLS_KEY_PATH=/etc/nginx/certs/privkey.pem

INSTALL_NODE=1
INSTALL_PM2=1

PG_BOOTSTRAP_SQL_FILE=

ENABLE_TEMP_AGENT_ACCESS=0
TEMP_AGENT_USER=ai-temp
TEMP_AGENT_SHELL=/usr/sbin/nologin
TEMP_AGENT_PUBKEY_FILE=
TEMP_AGENT_KEY_TAG=bootstrap-temp-agent
TEMP_AGENT_ENABLE_SUDO=0
TEMP_AGENT_SUDO_COMMANDS=/usr/bin/systemctl,/usr/bin/docker,/usr/bin/journalctl
TEMP_AGENT_DELETE_AT_END=1

REVOKE_TEMP_ACCESS_AT_END=1
TOKEN_REVOKE_COMMAND=
DEPLOY_KEY_ROTATE_COMMAND=

JOURNAL_SYSTEM_MAX_USE=2G
JOURNAL_RUNTIME_MAX_USE=512M
JOURNAL_MAX_RETENTION_SEC=30day
